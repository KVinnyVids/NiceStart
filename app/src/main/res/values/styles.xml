<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bgimg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">0.5</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="FlatButton_Register" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:strokeColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FlatButton_Continue">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FlatButton_Back">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/Pink</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.7</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>